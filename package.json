{
  "name": "forum-app",
  "version": "1.0.0",
  "description": "A simple Forum app which can be used as a template.",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -L",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "prettier": "prettier --check **/*.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "build": "tsc -p tsconfig.json",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "ready": "npm run format && npm run lint && npm run build"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "express",
    "jest"
  ],
  "author": {
    "name": "vAndrewKarma",
    "email": "karma.andrew16@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.19",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http": "0.0.1-security",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "ts-jest": "^29.1.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
